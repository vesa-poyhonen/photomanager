<%= form_for(@picture) do |f| %>
  <%= render 'shared/alert', object: @picture %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.file_field :filename, class: 'form-control-file' %>
  </div>

  <%= f.submit "Submit", class: "btn btn-primary" %>
  <%= link_to "Cancel", pictures_path, class: "btn btn-secondary" %>
<% end %>
